{
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "internalConsole",
        },
        {
            "name": "Node: Current File in interged terminal",
            "request": "launch",
            "program": "${file}", // current file :https://code.visualstudio.com/docs/editor/variables-reference#_predefined-variables
            "console": "integratedTerminal", // some node programs need terminal
            "smartStep": true,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "name": "TS/JS: Current File",
            "request": "launch",
            "program": "${file}", // current file :https://code.visualstudio.com/docs/editor/variables-reference#_predefined-variables
            "preLaunchTask": "tsc: watch - tsconfig.json",
            "smartStep": true,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        }
    ]
}